package FilterTest;

import static org.junit.Assert.assertTrue;
import static org.junit.jupiter.api.Assertions.*;

import java.util.ArrayList;
import java.util.Random;

import org.junit.jupiter.api.BeforeAll;
import org.junit.jupiter.api.Test;
import filter.model.integer.FilterModel;
import predicates.EvenPredicate;;
class FilterTest {
	
	private static final int NUM_NUM = 1000000;
	static Random gen = new Random();
	static ArrayList<Integer> ali;
	static EvenPredicate ep;
	@BeforeAll
	static void setUpBeforeClass() throws Exception {
		Random gen = new Random();
		EvenPredicate a = new EvenPredicate();
		ali = new ArrayList<>();
		for(int i =0;i<30;i++)ali.add(gen.nextInt());
		FilterModel.filter(ali,a);
	}

	
	@Test
	void test() {
		boolean flag = true;
		for(Integer i : ali) {
			if(i%2!=0)flag=false;
			break;
		}
		assertTrue(flag);
	}

}
