package hw_2_11_18;

public class TestString {

	public static void main(String[] args) {

		String s = "Delorian";
		String s1 = "delorian";

		System.out.println(isSubstring(s, s1));

		System.out.println("====================================");

		String s2 = "This is a true Havy Metal Man! They  stop us! Let them try, For heavy metal We will die can't";

		System.out.println(countWords(s2, "metal"));

		System.out.println("====================================");

		String[] arrStr = s2.split(" ");

		bubbleSortString(arrStr);
		
		for(int i = 0; i<arrStr.length;i++)
		System.out.println(arrStr[i]);

	}

	public static boolean isSubstring(String s, String s1) {// true if s1 is substring of s OR s substring of s1
		if (s.substring(0, 2).equalsIgnoreCase(s1.substring(0, 2)))
			return true;
		return false;
	}

	public static int countWords(String s, String word) {
		int count = 0;
		String[] arrStr = s.split(" ");
		for (int i = 0; i < arrStr.length; i++) {
			if (word.trim().equalsIgnoreCase(arrStr[i]))
				count++;
		}
		return count;
	}

	public static void bubbleSortString(String[] arrStr) {
		char c = 0;
		String s = "";
		for (int i = 0; i < arrStr.length; i++) {
			for (int j = 0; j < arrStr.length - 1 - i; j++) {
				if (arrStr[j].charAt(c) > 64 && arrStr[j].charAt(c) < 91 && arrStr[j].charAt(c) > 96 && arrStr[j].charAt(c) < 123) {
					s = arrStr[j];
					arrStr[j]=arrStr[j+1];
					arrStr[j+1] = s;
				}
			}
		}

	}

}
